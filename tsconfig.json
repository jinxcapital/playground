{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "*": ["src/*"]
    },
    "lib": ["esnext"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": ["node_modules/"]
}
